generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  // email               String            @id
  cpf               String            @id @default("00000000000")
  nome              String
  senha             String
  
  academia          Academias?        @relation("admin")

  @@map("users")
}



model Academias {
  email             String            @id
  id_admin          String            @unique
  nome              String
  telefone          String

  admin       User                    @relation("admin", fields: [id_admin], references: [cpf])
  classes     Classes[]               @relation("classe")
  ranking     Ranking[]               @relation("ranking")
  tenistas    Tenistas[]              @relation("tenista")
  Torneios    Torneios[]              @relation("torneio")

  @@map("academias")
}



model Generos {
  id                Int               @id @default(autoincrement())
  nome              String

  classes           Classes[]         @relation("classe")

  @@map("generos")
}



model Classes {
  sigla             String            @id
  id_academia       String
  id_genero         Int
  nome              String
  dupla             Boolean           @default(false)

  academia          Academias         @relation("classe", fields: [id_academia], references: [email])
  genero            Generos           @relation("classe", fields: [id_genero], references: [id])
  classeRanking     ClasseRanking[]   @relation("classe")

  @@map("classes")
}



model Ranking {
  id                Int               @id @default(autoincrement())
  id_academia       String
  nome              String

  academia          Academias         @relation("ranking", fields: [id_academia], references: [email])
  classeRanking     ClasseRanking[]   @relation("ranking")

  @@map("ranking")
}



model ClasseRanking {
  id                Int               @id @default(autoincrement())
  id_classe         String
  id_ranking        Int

  classe            Classes           @relation("classe", fields: [id_classe], references: [sigla])
  ranking           Ranking           @relation("ranking", fields: [id_ranking], references: [id])

  @@map("classeRanking")
}



model Tenistas {
  cpf               String            @id
  id_academia       String
  nome              String

  academia         Academias         @relation("tenista", fields: [id_academia], references: [email])
  inscricao        Inscricao[]       @relation("inscricao")
  partida1         Partidas[]        @relation("partida1")
  partida2         Partidas[]        @relation("partida2")

  @@map("tenistas")
}



model Status {
  id                Int               @id @default(autoincrement())
  nome              String

  Torneios          Torneios[]        @relation("torneio")

  @@map("status")
}



model PontuacoesCampeonato {
  id                Int               @id @default(autoincrement())
  vencedor          Int               @default(100)
  r1                Int               @default(70)
  r2                Int               @default(60)
  r4                Int               @default(50)
  r8                Int               @default(30)
  r16               Int               @default(20)
  r32               Int               @default(10)
  r64               Int               @default(05)
  participação      Int               @default(05)

  Torneios          Torneios[]        @relation("torneio")

  @@map("pontuacoesCampeonato")
}



model Torneios {
  id                String            @id @default(uuid())
  id_academia       String
  id_status         Int
  id_pontuacoes     Int
  nome              String
  descricao         String
  local             String
  simples           Boolean
  duplas            Boolean
  ranking           Boolean
  sets              Int
  tiebreakao        Boolean
  dataInicio        DateTime
  dataFim           DateTime

  academia          Academias         @relation("torneio", fields: [id_academia], references: [email])
  status            Status            @relation("torneio", fields: [id_status], references: [id])
  pontuacoes        PontuacoesCampeonato @relation("torneio", fields: [id_pontuacoes], references: [id])
  inscricao         Inscricao[]       @relation("inscricao")
  partida           Partidas[]        @relation("partida")

  @@map("campeonatos")
}



model Inscricao {
  id                Int               @id @default(autoincrement())
  id_torneio        String
  id_jogador        String
  
  torneio           Torneios          @relation("inscricao", fields: [id_torneio], references: [id])
  jogador           Tenistas          @relation("inscricao", fields: [id_jogador], references: [cpf])
  
  @@map("inscricao")
}



model Partidas {
  id              Int                 @id @default(autoincrement())
  id_torneio      String
  id_tenista1     String?
  id_tenista2     String?
  chave           String
  vencedor        Int?
  dataPartida     DateTime?
  local           Int?

  torneio         Torneios            @relation("partida", fields: [id_torneio], references: [id])
  tenista1        Tenistas?           @relation("partida1", fields: [id_tenista1], references: [cpf])
  tenista2        Tenistas?           @relation("partida2", fields: [id_tenista2], references: [cpf])
  set             Sets[]              @relation("sets")
  
  @@map("partidas")
}



model  Sets {
  id              Int                 @id @default(autoincrement())
  id_partida      Int
  tiebreak        Boolean
  placarTen1      Int
  placarTen2      Int

  partida         Partidas            @relation("sets", fields: [id_partida], references: [id])  
  
  @@map("sets")
}

